@model DCAS.Models.MedicineInventory
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<h4>MedicineInventory</h4>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="MedicineName" class="control-label"></label>
                <input asp-for="MedicineName" class="form-control" required />
                <span asp-validation-for="MedicineName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" min="0.01" required />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" type="number" min="1" required />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Miligram" class="control-label"></label>
                <input asp-for="Miligram" class="form-control" />
                <span asp-validation-for="Miligram" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ExpiryDate" class="control-label"></label>
                <input asp-for="ExpiryDate" class="form-control" type="date" required />
                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Image" class="control-label">Upload Image *</label>
                <input name="Image" type="file" class="form-control" accept="image/*" required />
                @if (ViewData.ModelState["Image"]?.Errors.Count > 0)
                {
                    <span class="text-danger">@ViewData.ModelState["Image"].Errors.FirstOrDefault()?.ErrorMessage</span>
                }
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Add client-side validation for image
        document.querySelector('form').addEventListener('submit', function(e) {
            var imageInput = document.querySelector('input[name="Image"]');
            if (!imageInput.files || imageInput.files.length === 0) {
                e.preventDefault();
                alert('Please select an image file.');
                return false;
            }
        });
    </script>
}