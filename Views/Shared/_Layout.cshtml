<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DCAS - Dashboard</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <style>
        :root {
            --header-height: 60px;
            --sidebar-width: 250px;
            --gold-color: #f3c258;
            --dark-color: #343a40;
            --menu-bg: #DBCACA;
            --menu-hover: #C5B9B9;
            --submenu-bg: #DBCACA   ;
            --submenu-hover: #C5B9B9;
        }

        body {
            padding-top: var(--header-height);
            background-color: white;
        }

        /* --- Header Styles --- */
        .fixed-header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: var(--header-height);
            background-color: #DBCACA;
            color: var(--dark-color);
            z-index: 1050;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 1rem;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .hamburger-toggle {
            font-size: 1.5rem;
            cursor: pointer;
        }

        .user-info {
            display: flex;
            align-items: center;
            font-size: 0.9rem;
        }

            .user-info .username {
                font-weight: bold;
                margin-right: 0.5rem;
            }

            .user-info .role {
                font-size: 0.8rem;
                color: rgba(0, 0, 0, 0.6);
            }

            /* Style the logout button/link */
            .user-info .logout-btn {
                margin-left: 1rem;
                color: var(--dark-color);
                text-decoration: none;
                cursor: pointer;
                background: none;
                border: none;
                padding: 0;
            }

        /* --- Sidebar Styles --- */
        .sidebar {
            position: fixed;
            top: 0;
            left: -250px;
            width: var(--sidebar-width);
            height: 100vh;
            background-color: var(--menu-bg);
            z-index: 1040;
            padding-top: var(--header-height);
            transition: left 0.3s ease;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
            overflow-y: auto;
        }

            .sidebar.open {
                left: 0;
            }

            .sidebar a, .sidebar summary {
                display: flex;
                align-items: center;
                color: var(--dark-color);
                padding: 0.75rem 1rem;
                text-decoration: none;
                cursor: pointer;
                transition: background-color 0.2s ease;
                list-style: none;
            }

                .sidebar a:hover, .sidebar summary:hover {
                    background-color: var(--menu-hover);
                    color: white;
                }

            .sidebar details {
                margin: 0;
            }

            .sidebar .submenu-item {
                background-color: var(--submenu-bg);
                padding-left: 2.5rem;
                border-left: 5px solid #fff3e0;
            }

                .sidebar .submenu-item:hover {
                    background-color: var(--submenu-hover);
                    color: white;
                }

            .sidebar details summary::-webkit-details-marker {
                display: none;
            }

            .sidebar details summary {
                position: relative;
            }

                .sidebar details summary::after {
                    font-family: "Font Awesome 6 Free";
                    content: "\f0d7";
                    font-weight: 900;
                    position: absolute;
                    right: 1rem;
                    transition: transform 0.2s;
                }

            .sidebar details[open] summary::after {
                content: "\f0d8";
            }


        /* --- Content Styles --- */
        .content {
            padding: 1rem;
            transition: margin-left 0.3s ease;
        }

            .content.sidebar-open {
                margin-left: var(--sidebar-width);
            }
    </style>
</head>
<body>
    <header class="fixed-header">
        <div>
            <span class="hamburger-toggle" id="hamburger-toggle">
                <i class="fas fa-bars"></i>
            </span>
            <span class="ms-3">BEYOND DENTAL</span>
        </div>
        <div class="user-info">
            <i class="fas fa-user-circle me-2"></i>
            <span class="username">@User.Identity.Name</span>
            <span class="role">(@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value)</span>

            <!-- LOGOUT FORM (Recommended for security) -->
            <form id="logoutForm" asp-controller="Login" asp-action="Logout" method="post" class="d-inline">
                <!-- IMPORTANT: @Html.AntiForgeryToken() adds the necessary hidden field for the controller's [ValidateAntiForgeryToken] attribute -->
                @Html.AntiForgeryToken()
                <button type="submit" class="logout-btn">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </button>
            </form>
        </div>
    </header>

    <aside class="sidebar open" id="sidebar">
        <!-- BASE NAVIGATION (Dashboard link is now unified for both Admin and Staff, pointing to Home/Index) -->
        @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
        {
            <a href="@Url.Action("Index", "Home")"><i class="fas fa-home me-2"></i> Home</a>
        }

        <!-- ============================================== -->
        <!-- ADMIN SPECIFIC NAVIGATION -->
        <!-- ============================================== -->
        @if (User.IsInRole("Admin"))
        {
            <a href="@Url.Action("Index", "AppointmentRegister")"><i class="fas fa-user-plus me-2"></i> Appointment Booking</a>

            <!-- SCHEDULES MANAGEMENT DROPDOWN -->
            <details>
                <summary><i class="fas fa-calendar-alt me-2"></i> Schedules Management</summary>
                <a class="submenu-item" href="@Url.Action("Index", "Reschedules")"><i class="fas fa-edit me-2"></i>Info/Reschedules</a>
                <a class="submenu-item" href="@Url.Action("Index", "TodaySchedules")"><i class="fas fa-calendar-check me-2"></i> Today’s Schedules</a>
            </details>

            <!-- MEDICAL MANAGEMENT DROPDOWN -->
            <details>
                <summary><i class="fas fa-medkit me-2"></i> Medical Management</summary>
                <a class="submenu-item" href="@Url.Action("Index", "MedicalServices")"><i class="fas fa-stethoscope me-2"></i> Medical Services</a>
                <a class="submenu-item" href="@Url.Action("Index", "MedicineInventories")"><i class="fas fa-pills me-2"></i> Medicine Inventory</a>
            </details>

            <!-- TRANSACTIONS DROPDOWN -->
            <details>
                <summary><i class="fas fa-cash-register me-2"></i> Transactions</summary>
                <a class="submenu-item" href="@Url.Action("Index", "Payments")"><i class="fas fa-peso-sign me-2"></i> Payments</a>
                <a class="submenu-item" href="@Url.Action("PaymentHistory", "Payments")"><i class="fas fa-history me-2"></i> Payment History</a>
            </details>

            <a href="@Url.Action("Index", "Users")"><i class="fas fa-users me-2"></i> Users</a>
        }

        <!-- ============================================== -->
        <!-- STAFF SPECIFIC NAVIGATION -->
        <!-- ============================================== -->
        @if (User.IsInRole("Staff"))
        {

            <!-- SCHEDULES MANAGEMENT DROPDOWN -->
            <details>
                <summary><i class="fas fa-calendar-alt me-2"></i> Schedules Management</summary>
                <a class="submenu-item" href="@Url.Action("Index", "Reschedules")"><i class="fas fa-edit me-2"></i> Info/Reschedules</a>
                <a class="submenu-item" href="@Url.Action("Index", "TodaySchedules")"><i class="fas fa-calendar-check me-2"></i> Today’s Schedules</a>
            </details>

            <!-- MEDICAL MANAGEMENT DROPDOWN -->
            <details>
                <summary><i class="fas fa-medkit me-2"></i> Medical Management</summary>
                <a class="submenu-item" href="@Url.Action("Index", "MedicalServices")"><i class="fas fa-stethoscope me-2"></i> Medical Services</a>
                <a class="submenu-item" href="@Url.Action("Index", "MedicineInventories")"><i class="fas fa-pills me-2"></i> Medicine Inventory</a>
            </details>

            <!-- TRANSACTIONS DROPDOWN -->
            <details>
                <summary><i class="fas fa-cash-register me-2"></i> Transactions</summary>
                <a class="submenu-item" href="@Url.Action("Index", "Payments")"><i class="fas fa-peso-sign me-2"></i> Payments</a>
                <a class="submenu-item" href="@Url.Action("PaymentHistory", "Payments")"><i class="fas fa-history me-2"></i> Payment History</a>
            </details>
            <a href="@Url.Action("Profile", "Home")"><i class="fas fa-users me-2"></i> Profile</a>
        }
    </aside>

    <main class="content sidebar-open" id="main-content">
        @RenderBody()
    </main>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Toggle sidebar open/closed state
        document.getElementById('hamburger-toggle').addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('open');
            document.getElementById('main-content').classList.toggle('sidebar-open');
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
